########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	main.c				\
				ft_itoa.c			\
				ft_split.c			\
				map_checker.c		\
				map_gen.c			\
				map_parser.c		\
				map_solve_check.c	\
				move_wasd.c			\
				so_long_utils.c

SRCS_D		:=	srcs/

OBJS_D		:=	objs/

OBJS		:=	$(SRCS:%.c=$(OBJS_D)%.o)

HEAD		:=	includes/so_long.h

HEAD_D		:=	.

CFLAGS		:=	-Wall -Wextra -Werror -g3

NAME		:=	so_long

########################################################################################################################
#                                                         LIB                                                          #
########################################################################################################################

MLX			:=	libmlx.a

MLX_D		:=	mlx_linux/

MLX_F		:=	-L$(MLX_D) -L/usr/lib -lmlx -lXext -lX11 -lm -lz

MLX_H		:=	$(MLX_D)mlx.h

MLX_A		:=	$(addprefix $(MLX_D), $(MLX))

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	lib
				$(MAKE) $(NAME)

lib			:
				$(MAKE) -C $(MLX_D)

$(NAME)		:	$(OBJS_D) $(OBJS) $(MLX_A) $(HEAD)
				$(CC) $(CFLAGS) -o $(NAME) $(OBJS) $(MLX_A) $(MLX_F)

$(OBJS)		:	$(OBJS_D)%.o: $(SRCS_D)%.c $(HEAD) $(MLX_H)
				$(CC) $(CFLAGS) -I/usr/include -Imlx_linux -c $< -o $@

$(OBJS_D)	:
				@mkdir -p $(OBJS_D)

########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean		:
				$(RM) -r $(OBJS) $(OBJS_D) $(OBJS_B) $(OBJS_B_D)
				$(MAKE) clean -C mlx_linux

fclean		:	clean
				$(RM) $(NAME) $(NAME_B)
				$(MAKE) clean -C mlx_linux

re			:	fclean all

.PHONY: all bonus clean fclean re lib
